<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Welcome to Bilal Academy"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/android_card"
        android:layout_width="154dp"
        android:layout_height="133dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="Android App Development" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ios_card"
        android:layout_width="154dp"
        android:layout_height="133dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/android_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="IOS App Development"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/graphic_card"
        android:layout_width="154dp"
        android:layout_height="133dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/ios_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Graphic Designing"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/video_card"
        android:layout_width="154dp"
        android:layout_height="133dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/graphic_card"
        app:layout_constraintTop_toBottomOf="@+id/uiux_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Video Editing &amp; Animation"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/web_card"
        android:layout_width="154dp"
        android:layout_height="133dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/android_card"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Website Development"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/uiux_card"
        android:layout_width="154dp"
        android:layout_height="133dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/ios_card"
        app:layout_constraintTop_toBottomOf="@+id/web_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="UI UX Engenering"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>